<% title @update_form.name %>

<% public_update_form = publicize @update_form %>

<section>
  <header>
    <h2><%= @update_form.name %></h2>
  </header>

  <div class="col-md-6 col-md-offset-3">
    <%= render public_update_form %>

    <h3>Copy Message to Slack:</h3>
    <%= text_area_tag :message, '', class: 'form-control', rows: 16, readonly: true %>
  </div>
</section>
